<div class="mt-4">
    <h2>Danh sách ghi chú</h2>
    <a href="/notes/create" class="btn btn-primary btn-sm font-weight-bold">
        <i class="fa-solid fa-plus"></i> Thêm mới
    </a>

    <br>

    <button class="btn btn-success btn-sm mt-2 btn-search font-weight-bold">
        <i class="fa-solid fa-magnifying-glass"></i> Tìm kiếm
    </button>

    <form class="form-search" style="display: none;">
        <div class="row mt-3">
            <div class="col-md-4">
                <label for="name">Tên ghi chú</label>
                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên" name="s_name" id="name">
            </div>

            <div class="col-md-4">
                <label for="description">Mô tả</label>
                <input type="text" class="form-control" placeholder="Tìm kiếm theo mô tả" name="s_description"
                    id="description">
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-4">
                <label for="createdAtFrom">Ngày tạo</label>
                <div class="d-flex">
                    <input type="date" class="form-control flex-grow-1" placeholder="Tìm kiếm theo mô tả"
                        name="s_createdAtFrom" id="createdAtFrom">
                    <span class="mx-2">~</span>
                    <input type="date" class="form-control flex-grow-1" placeholder="Tìm kiếm theo mô tả"
                        name="createdAtTo" id="createdAtTo">
                </div>
            </div>

            <div class="col-md-4">
                <label for="updatedAtFrom">Ngày cập nhật</label>
                <div class="d-flex">
                    <input type="date" class="form-control flex-grow-1" placeholder="Tìm kiếm theo mô tả"
                        name="updatedAtFrom" id="updatedAtFrom">
                    <span class="mx-2">~</span>
                    <input type="date" class="form-control flex-grow-1" placeholder="Tìm kiếm theo mô tả"
                        name="updatedAtTo" id="updatedAtTo">
                </div>
            </div>
        </div>
        

        <button class="btn btn-success btn-sm mt-2">Tìm kiếm</button>
    </form>

    <div class="mt-3 table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ID</th>
                    <th>Tên ghi chú</th>
                    <th>Mô tả</th>
                    <th>Ngày tạo</th>
                    <th>Ngày cập nhật</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each notes}}
                <tr>
                    <td scope="row"></td>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{vnFullFormat this.createdAt}}</td>
                    <td>{{vnFullFormat this.updatedAt}}</td>
                    <td>
                        <a href="#" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="#" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>