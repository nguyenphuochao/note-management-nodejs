<div class="mt-4">
    <h2>Đánh dấu ghi chú</h2>

    <a href="/notes" class="font-weight-bold"><i class="fa-solid fa-arrow-left"></i> Danh sách ghi chú</a>

    <div class="mt-4">

        <div class="mt-2 table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th style="width: 20%;">Tên ghi chú</th>
                        <th style="width: 20%;">Mô tả</th>
                        <th>Ngày tạo</th>
                        <th>Ngày cập nhật</th>
                        <th style="width: 13%;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each notes}}
                    <tr>
                        <td scope="row">{{sum @index 1 }}</td>
                        <td><span class="text-truncate-line-clamp-2">{{this.name}}</span></td>
                        <td><span class="text-truncate-line-clamp-2">{{{this.description}}}</span></td>
                        <td>{{vnFullFormat this.createdAt}}</td>
                        <td>{{vnFullFormat this.updatedAt}}</td>
                        <td style="width: 20%;">
                            <a href="/notes/{{this._id}}/edit" class="btn btn-warning btn-sm btn-edit" data-id="{{this._id}}">
                                <i class="fa-solid fa-pen-to-square"></i> Sửa
                            </a>
                            <a href="#" class="btn btn-success btn-sm btn-uncheck-bookmark" data-id="{{this._id}}">
                                <i class="fa-solid fa-pen-to-square"></i> Bỏ đánh dấu
                            </a>
                            {{!-- <a href="#" class="btn btn-danger btn-sm btn-delete" data-id="{{this._id}}">
                                <i class="fa-solid fa-pen-to-square"></i> Xóa
                            </a> --}}
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="6" class="text-center">Không tìm thấy đánh dấu. <a href="/notes">Danh sách ghi
                                chú</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>

        <div class="total-items">
            <p>Số lượng ghi chú: <b>{{totalNotes}}</b></p>
        </div>

    </div>
</div>

<!-- Modal show full content-->
<div class="modal fade" id="modalShowContent" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <button style="text-align: right;margin-right: 10px;" type="button" class="close" data-dismiss="modal"
                aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-body">
                ...
            </div>
        </div>
    </div>
</div>

<form name="form-bookmark" method="POST"></form>

<script>
    // Loaded DOM
    document.addEventListener("DOMContentLoaded", (event) => {
        var btnUncheckBookmark = $(".btn-uncheck-bookmark")
        var formBookmark = document.forms['form-bookmark'];

        // Update title
        document.title = "Quản lí ghi chú | Đánh dấu ghi chú";

        // click uncheck bookmark
        btnUncheckBookmark.click(function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            formBookmark.action = '/notes/' + id + '/bookmark/uncheck?_method=PATCH';
            formBookmark.submit();
        })

        // Click column show name modal
        $("tbody tr td:nth-child(2) span").click(function () {
            var content = $(this).text();
            $("#modalShowContent").modal("show");
            $("#modalShowContent .modal-dialog").removeClass("modal-lg");
            $("#modalShowContent .modal-body").html(content);
        })

        // Click column show desciption modal
        $("tbody tr td:nth-child(3) span").click(function () {
            var content = $(this).html();
            $("#modalShowContent").modal("show");
            $("#modalShowContent .modal-dialog").addClass("modal-lg");
            $("#modalShowContent .modal-body").html(content);
        })
    });

</script>