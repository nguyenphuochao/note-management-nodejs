<style>
    body {
        background-color: #0084A8
    }

    form {
        background-color: white;
        padding: 50px;
        width: 600px;
        margin: 0 auto;
    }
</style>

<form class="mt-5" action="/login" method="POST" >
    <h2 class="text-center">Đăng nhập</h2>
    <div class="form-group">
        <label for="username">Tên đăng nhập</label>
        <input type="text" class="form-control" id="username" placeholder="Vui lòng nhập tên đăng nhập" name="username" required>
    </div>
    <div class="form-group">
        <label for="password">Mật khẩu</label>
        <input type="text" class="form-control" id="password" placeholder="Vui lòng nhập mật khẩu" name="password" required>
    </div>
    <div>
        <button class="btn btn-primary">Đăng nhập</button>
        <div class="mt-3">
            <span>Bạn chưa có tài khoản</span>
            <a href="/register">Đăng kí tại đây</a>
        </div>
    </div>
</form>