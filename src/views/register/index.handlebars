<style>
    body {
        background-color: #0084A8
    }

    form {
        background-color: white;
        padding: 50px;
        width: 600px;
        margin: 0 auto;
    }
</style>

<form class="mt-5" action="/register" method="POST" >
    <h2 class="text-center">Đăng kí</h2>
    <div class="form-group">
        <label for="fullname">Tên của bạn</label>
        <input type="text" class="form-control" id="fullname" placeholder="Vui lòng nhập tên của bạn" name="fullname" required>
    </div>
    <div class="form-group">
        <label for="username">Tên đăng nhập</label>
        <input type="text" class="form-control" id="username" placeholder="Vui lòng nhập tên đăng nhập" name="username" required>
    </div>
    <div class="form-group">
        <label for="password">Mật khẩu</label>
        <input type="text" class="form-control" id="password" placeholder="Vui lòng nhập mật khẩu" name="password" required>
    </div>
    <div class="form-group">
        <label for="password_confirm">Nhập lại mật khẩu</label>
        <input type="text" class="form-control" id="password_confirm" placeholder="Vui lòng nhập lại mật khẩu" name="password_confirm" required>
    </div>
    <div>
        <button class="btn btn-primary">Đăng nhập</button>
        <div class="mt-3">
            <span>Bạn đã có tài khoản</span>
            <a href="/login">Đăng nhập tại đây</a>
        </div>
    </div>
</form>