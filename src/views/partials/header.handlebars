<header class="mt-5">

    <div>
        <img width="100%" height="370" src="https://cdn-media.sforum.vn/storage/app/media/ctv_seo10/background-2-9-thumbnail.jpg" alt="">
    </div>

    <div class="d-flex justify-content-between">

        <div class="menu-item">
            <a href="/notes" class="btn btn-primary btn-sm font-weight-bold active">Ghi chú</a>
        </div>

        <div class="account">
            <div>
                <span>Xin chào : </span>
                <span class="font-weight-bold">{{ user.fullname }}</span>
                <span><img style="border-radius: 50%;" src="/uploads/{{user.avatar}}" height="30" width="30" alt="{{user.avatar}}"></span>
            </div>

            <a href="/profile" class="btn btn-info btn-sm font-weight-bold mt-2">Thông tin tài khoản</a>

            <form action="/logout" method="POST" style="display: inline">
                <button class="btn btn-danger btn-sm font-weight-bold mt-2">Đăng xuất</button>
            </form>
        </div>

    </div>


</header>